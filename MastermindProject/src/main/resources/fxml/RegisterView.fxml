<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="300.0" stylesheets="@../css/registerstyle.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gumisie.presenter.RegisterPresenter">
   <children>
      <AnchorPane fx:id="topPane" prefHeight="34.0" prefWidth="300.0">
         <children>
            <Button fx:id="exit" layoutX="246.0" layoutY="6.0" mnemonicParsing="false" prefHeight="19.0" prefWidth="47.0" text="X" textFill="WHITE" />
            <Button fx:id="minimize" layoutX="191.0" layoutY="6.0" mnemonicParsing="false" prefHeight="19.0" prefWidth="47.0" text="_" textFill="WHITE" />
         </children>
      </AnchorPane>
      <Label layoutX="95.0" layoutY="58.0" text="Register" textFill="WHITE">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label layoutX="52.0" layoutY="116.0" text="Email (will be used as login)" textFill="WHITE">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="emailTextField" layoutX="73.0" layoutY="141.0" promptText="email" />
      <Label layoutX="113.0" layoutY="181.0" text="First name" textFill="WHITE">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label layoutX="113.0" layoutY="248.0" text="Last name" textFill="WHITE">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label layoutX="116.0" layoutY="311.0" text="Password" textFill="WHITE">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="firstNameTextField" layoutX="74.0" layoutY="206.0" promptText="first name" />
      <TextField fx:id="lastNameTextField" layoutX="73.0" layoutY="273.0" promptText="last name" />
      <PasswordField fx:id="passwordTextField" layoutX="73.0" layoutY="336.0" promptText="password" />
      <Button fx:id="signButton" layoutX="108.0" layoutY="465.0" mnemonicParsing="false" onAction="#handleRegisterAction" prefHeight="30.0" prefWidth="85.0" text="Sign Up" textFill="WHITE" />
      <Label fx:id="wrongData" alignment="CENTER" layoutY="502.0" prefHeight="25.0" prefWidth="300.0" textFill="#fc5555" />
      <Label layoutX="85.0" layoutY="377.0" text="Confirm password" textFill="WHITE">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <PasswordField fx:id="confirmPasswordField" layoutX="74.0" layoutY="402.0" promptText="password" />
   </children>
</AnchorPane>
